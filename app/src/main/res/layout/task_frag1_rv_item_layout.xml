<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:id="@+id/tasks_frag1_rv_item_container"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="12dp">

    <ImageView
        android:contentDescription="@string/chosen_priority_level"
        android:id="@+id/tasks_frag1_rv_item_priority_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_flag_red_24dp" />

    <TextView
        android:id="@+id/tasks_frag1_rv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/tasks_frag1_rv_item_alarm_icon"
        android:layout_toEndOf="@id/tasks_frag1_rv_item_priority_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tasks_frag1_rv_item_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tasks_frag1_rv_item_title"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@id/tasks_frag1_rv_item_alarm_icon"
        android:layout_toEndOf="@id/tasks_frag1_rv_item_priority_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/colorContentText"
        android:textSize="12sp" />

    <ImageView
        android:contentDescription="@string/has_alarm"
        android:id="@+id/tasks_frag1_rv_item_alarm_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_access_alarm_lightblue_24dp" />

</RelativeLayout>