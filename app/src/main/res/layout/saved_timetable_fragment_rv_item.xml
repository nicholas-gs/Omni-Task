<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/saved_timetable_fragment_rv_item_container"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/colorPrimary"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/saved_timetable_fragment_rv_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_toStartOf="@id/saved_timetable_fragment_rv_item_icon"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/saved_timetable_fragment_rv_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:clickable="false"
        android:contentDescription="@string/is_main_timetable"
        android:src="@drawable/ic_star_border_grey_24dp" />

    <TextView
        android:id="@+id/saved_timetable_fragment_rv_item_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/saved_timetable_fragment_rv_item_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/colorContentText"
        android:textSize="14sp" />

</RelativeLayout>