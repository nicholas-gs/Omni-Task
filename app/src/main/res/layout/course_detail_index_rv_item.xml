<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/index_rv_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:text="LEC\/STUDIO"
        android:textColor="@color/colorContentText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/index_rv_item_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:text="Group : SE2"
        android:textColor="@color/colorContentText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/index_rv_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_rv_item_type"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:text="Location : LT2A"
        android:textColor="@color/colorContentText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/index_rv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_rv_item_location"
        android:text="Time : 1030-1130"
        android:textColor="@color/colorContentText"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/index_rv_item_remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/index_rv_item_time"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Remarks"
        android:textColor="@color/colorContentText" />

</RelativeLayout>