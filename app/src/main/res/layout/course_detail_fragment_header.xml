<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/course_detail_toolbar"
   android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingBottom="8dp"
    android:paddingTop="4dp">


    <TextView
        android:id="@+id/course_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:paddingBottom="8dp"
        android:singleLine="false"
        android:text="ART AS COMMODITY"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/course_detail_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_detail_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/course_detail_au"
        android:text="Code"
        android:textColor="@color/colorContentText"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/course_detail_au"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_detail_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:paddingEnd="4dp"
        android:paddingStart="0dp"
        android:singleLine="true"
        android:text="AU : "
        android:textColor="@color/colorContentText"
        android:textSize="16sp" />

    <View
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/course_detail_au"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimaryLight" />

</RelativeLayout>
